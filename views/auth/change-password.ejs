<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/header.ejs') %>

            <main>
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="product-form" action="/change-password" method="POST">
                            <div class="form-control">
                                <label for="empNo">Emp No</label>
                                <input type="text" name="empNo" id="empNo" value="<%=oldInputData.empNo%>" />

                                <label for="oldPass">Old Password</label>
                                <input type="password" name="oldPass" id="oldPass"
                                    value="<%=oldInputData.oldPassword%>" />

                                <label for="newPass">New Password</label>
                                <input type="text" name="newPass" id="newPass" value="<%=oldInputData.newPassword%>" />

                                <label for="confirmPass">Confirm New Password</label>
                                <input type="password" name="confirmPass" id="confirmPass"
                                    value="<%=oldInputData.confirmPassword%>" />
                            </div>

                            <div class="centered">
                                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                                <button class="btn btn-outline-primary" type="submit">Change Password</button>
                            </div>
                        </form>
            </main>

            <%- include('../includes/end.ejs') %>